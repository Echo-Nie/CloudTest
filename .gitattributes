# Java sources
*.java linguist-language=Java
*.groovy linguist-language=Groovy

# Maven
pom.xml linguist-language=XML
*.xml linguist-language=XML

# Spring Boot Configuration
*.yml linguist-language=YAML
*.yaml linguist-language=YAML
*.properties linguist-language=Properties

# Documentation
*.md linguist-language=Markdown
*.txt linguist-documentation=true
LICENSE linguist-documentation=true

# Generated files (don't count in language statistics)
target/** linguist-generated=true
**/generated/** linguist-generated=true
**/generated-sources/** linguist-generated=true
**/generated-test-sources/** linguist-generated=true

# Properly detect shell scripts
*.sh linguist-language=Shell
*.bat linguist-language=Batchfile
*.cmd linguist-language=Batchfile

# Mark specific directories as documentation
**/docs/** linguist-documentation=true

# Handle binary files
*.jar binary
*.war binary
*.zip binary

# Handle text files with specific line endings
*.java text eol=lf
*.xml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.properties text eol=lf
*.md text eol=lf
*.txt text eol=lf 