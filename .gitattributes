# Java sources
*.java linguist-language=Java

# Maven - Explicitly mark as XML with higher detectable percentage
pom.xml linguist-language=XML linguist-detectable=true
*.xml linguist-language=XML linguist-detectable=true

# Spring Boot Configuration - Make YAML more prominent
*.yml linguist-language=YAML linguist-detectable=true
*.yaml linguist-language=YAML linguist-detectable=true
*.properties linguist-language=Properties linguist-detectable=true

# Documentation
*.md linguist-documentation=true linguist-language=Markdown
*.txt linguist-documentation=true
LICENSE linguist-documentation=true

# Aggressively exclude all generated files from language statistics
**/target/** linguist-generated=true linguist-vendored=true
**/target/*.class linguist-generated=true linguist-vendored=true
**/target/**/*.class linguist-generated=true linguist-vendored=true
**/generated/** linguist-generated=true linguist-vendored=true
**/generated-sources/** linguist-generated=true linguist-vendored=true
**/generated-test-sources/** linguist-generated=true linguist-vendored=true

# Exclude test directories from language statistics
**/src/test/** linguist-documentation=true

# Handle binary files
*.jar binary linguist-vendored=true
*.war binary linguist-vendored=true
*.zip binary linguist-vendored=true

# Handle text files with specific line endings
*.java text eol=lf
*.xml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.properties text eol=lf
*.md text eol=lf
*.txt text eol=lf

# Explicitly vendored content
**/lib/** linguist-vendored=true
**/libs/** linguist-vendored=true 